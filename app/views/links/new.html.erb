<section class="section">
  <div class="container">
    <h1 class="title">Shortener Generator</h1>
    <%= form_with model: @link, authenticity_token: false, local: true do |form| %>
      

      <div class="field">
        <%= form.label :full_link, class: "label required-field" %>
        <%= form.text_field :full_link, value: "http://",autofocus: true, class: "input is-info", type: "text", placeholder: "Enter your original url path" %>
      </div>
     

      <div class="actions">
        <%= form.submit "Shorten this link!", class: "button button-large is-success is-outlined is-light" %>
      </div>
    <% end %>
  </div>
</section>